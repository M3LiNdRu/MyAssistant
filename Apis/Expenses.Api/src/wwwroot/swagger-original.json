        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string",
            "example" : "Carburant"
          },
          "description" : {
            "type" : "string",
            "example" : "Despeses de carburant"
          }
        },
        "example" : {
          "name" : "Carburant",
          "description" : "Despeses de carburant"
        }
      },
      "Expense" : {
        "required" : [ "amount", "category" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "example" : 1
          },
          "timestamp" : {
            "type" : "string",
            "format" : "date-time"
          },
          "category" : {
            "type" : "string",
            "example" : "Carburant"
          },
          "name" : {
            "type" : "string",
            "example" : "EL BRUCH"
          },
          "amount" : {
            "type" : "number",
            "format" : "float",
            "example" : 56.9
          },
          "currency" : {
            "type" : "string",
            "example" : "EUR"
          }
        },
        "example" : {
          "amount" : 56.9,
          "name" : "EL BRUCH",
          "currency" : "EUR",
          "id" : 1,
          "category" : "Carburant",
          "timestamp" : "2000-01-23T04:56:07.000+00:00"
        }
      },
