            "items" : {
              "$ref" : "#/components/schemas/Expense"
            }
          }
        },
        "example" : {
          "expenses" : [ {
            "amount" : 56.9,
            "name" : "EL BRUCH",
            "currency" : "EUR",
            "id" : 1,
            "category" : "Carburant",
            "timestamp" : "2000-01-23T04:56:07.000+00:00"
          }, {
            "amount" : 56.9,
            "name" : "EL BRUCH",
            "currency" : "EUR",
            "id" : 1,
            "category" : "Carburant",
            "timestamp" : "2000-01-23T04:56:07.000+00:00"
          } ]
