        "required" : [ "categories" ],
        "type" : "object",
        "properties" : {
          "expenses" : {
            "type" : "array",
            "nullable" : false,
            "items" : {
              "$ref" : "#/components/schemas/Category"
            }
          }
        },
        "example" : {
          "expenses" : [ {
            "name" : "Carburant",
            "description" : "Despeses de carburant"
          }, {
            "name" : "Carburant",
            "description" : "Despeses de carburant"
          } ]
        }
      }
